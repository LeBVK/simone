<div class="sidebar">
  <% if user_signed_in? %>
    <div class="top-sidebar">
      <div class="main-title"><%= current_user.hospital.name %></div>
      <%= link_to 'Dashboard', root_path, id: ('selected' if params[:action] == 'home') %>
      <%= link_to 'Opérations', surgeries_path, id: ('selected' if params[:action] == 'index' && params[:controller] == 'surgeries') %>
      <%= link_to 'Questionnaires', forms_path, id: ('selected' if params[:action] == 'index' && params[:controller] == 'forms') %>
    </div>
    <div class="bottom-sidebar">
      <%= link_to t(".sign_out", default: "Se déconnecter"), destroy_user_session_path, method: :delete %>
      </div>
    </div>
  <% else %>
    <%= link_to t(".sign_in", default: "Login"), new_user_session_path %>
  <% end %>
</div>
