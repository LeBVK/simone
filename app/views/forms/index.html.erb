<div class="content-container">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 text-center">
        <% @forms.each do |form| %>
          <p>Hospital id: <%= form.hospital_id %> -
            Surgery Type id: <%= form.surgery_type_id %> -
            Typeform id: <%= form.typeform_id %>
            <%= link_to "Update", form_path(form), method: :patch, class: "btn btn-sm btn-success" %>
            <a target="_blank" href="https://davidbenamran.typeform.com/to/<%=form.typeform_id %>" class='btn btn-sm btn-success'>View Typeform</a>
        <% end %>
      </div>
    </div>
    <div class="text-center">
      <%= link_to "Add new form", new_form_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
