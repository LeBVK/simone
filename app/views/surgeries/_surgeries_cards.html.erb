
  <div class="core-left">
    <div class="actions">
      <div class="btn-group" role="group" aria-label="...">
        <button type="button" class="btn btn-default small-font">Valider</button>
        <button type="button" class="btn btn-default small-font">Notifier le chirurgien</button>
        <button type="button" class="btn btn-default small-font">Relancer par SMS</button>
      </div>
        <div class="dropdown">
          <button class="btn btn-default dropdown-toggle small-font" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            Changer la priorité
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu small-font" aria-labelledby="dropdownMenu1">
            <li><%= link_to "Red", surgeries_path(status: "red", surgery_id: params[:surgery_id], pre_or_post: params[:pre_or_post]) %></li>
            <li><%= link_to "Orange", surgeries_path(status: "orange", surgery_id: params[:surgery_id], pre_or_post: params[:pre_or_post]) %></li>
            <li><%= link_to "Yellow", surgeries_path(status: "yellow", surgery_id: params[:surgery_id], pre_or_post: params[:pre_or_post]) %></li>
            <li><%= link_to "Green", surgeries_path(status: "green", surgery_id: params[:surgery_id], pre_or_post: params[:pre_or_post]) %></li>
          </ul>
        </div>
    </div>
    <div class="filters">
      <div class="dropdown">
        <button class="btn btn-default dropdown-toggle small-font" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
          <%= params[:status].present? ? params[:status].capitalize : "Filtrer par priorité" %>
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu small-font" aria-labelledby="dropdownMenu1">

          <li><%= link_to "Red", surgeries_path(status: "red", surgery_id: params[:surgery_id], pre_or_post: params[:pre_or_post]) %></li>
          <li><%= link_to "Orange", surgeries_path(status: "orange", surgery_id: params[:surgery_id], pre_or_post: params[:pre_or_post]) %></li>
          <li><%= link_to "Yellow", surgeries_path(status: "yellow", surgery_id: params[:surgery_id], pre_or_post: params[:pre_or_post]) %></li>
          <li><%= link_to "Green", surgeries_path(status: "green", surgery_id: params[:surgery_id], pre_or_post: params[:pre_or_post]) %></li>
          <li role="separator" class="divider"></li>
          <li><%= link_to "All", surgeries_path(surgery_id: params[:surgery_id]) %></li>
        </ul>
      </div>
      <div class="dropdown">
        <button class="btn btn-default dropdown-toggle small-font" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
          <%= params[:pre_or_post].present? ? (params[:pre_or_post] == "pre" ? "J-1" : "J+1") : "J+/-1" %>
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu small-font" aria-labelledby="dropdownMenu1">
          <li><%= link_to "J-1", surgeries_path(pre_or_post: "pre", surgery_id: params[:surgery_id], status: params[:status]) %></li>
          <li><%= link_to "J+1", surgeries_path(pre_or_post: "post", surgery_id: params[:surgery_id], status: params[:status]) %></li>
          <li role="separator" class="divider"></li>
          <li><%= link_to "All", surgeries_path(surgery_id: params[:surgery_id], status: params[:status]) %></li>
        </ul>
      </div>
    </div>
    A traiter
    <div class="surgery-cards-wrapper">
      <% @surgeries.where(status: "red", validated: false).each do |surgery| %>
        <%= render "surgery_card", surgery: surgery %>
      <% end %>
      <% @surgeries.where(status: "orange", validated: false).each do |surgery| %>
        <%= render "surgery_card", surgery: surgery %>
      <% end %>
      <% @surgeries.where(status: "yellow", validated: false).each do |surgery| %>
        <%= render "surgery_card", surgery: surgery %>
      <% end %>
      <% @surgeries.where(status: "green", validated: false).each do |surgery| %>
        <%= render "surgery_card", surgery: surgery %>
      <% end %>
    </div>
    Patients traités
    <div class="surgery-cards-validated-wrapper">
      <% @surgeries.where(validated: true).each do |surgery| %>
        <%= render "surgery_card", surgery: surgery %>
      <% end %>
    </div>
  </div>
